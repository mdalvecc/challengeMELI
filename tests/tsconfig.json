{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmit": true,
        "types": [
            "vitest",
            "node"
        ],
        "baseUrl": "..",
        "rootDir": "..",
        "paths": {
            "@services/*": [
                "src/services/*"
            ],
            "@graphql/*": [
                "src/graphql/*"
            ],
            "@graphql/generated/*": [
                "src/graphql/generated/*"
            ],
            "@app-types/*": [
                "src/types/*"
            ],
            "@app/*": [
                "src/*"
            ]
        },
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*.ts",
        "../vitest.config.ts"
    ]
}