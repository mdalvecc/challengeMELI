{
  "name": "challenge-meli",
  "author": "Mariano Dal Vecchio",
  "license": "MIT",
  "version": "1.0.0",
  "description": "API GraphQL para el detalle de productos de MercadoLibre",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development NODE_OPTIONS='--import tsx' tsx watch src/index.ts",
    "dev:watch": "NODE_ENV=development NODE_OPTIONS='--import tsx' tsx watch src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --cache --cache-location ./node_modules/.cache/eslint",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@graphql-tools/load-files": "6.6.1",
    "@graphql-tools/merge": "8.4.2",
    "@graphql-tools/schema": "9.0.19",
    "apollo-server": "3.12.1",
    "graphql": "16.8.1",
    "graphql-scalars": "^1.24.2"
  },
  "devDependencies": {
    "@types/graphql": "14.5.0",
    "@types/node": "20.0.0",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "5.0.0",
    "nodemon": "3.1.10",
    "prettier": "3.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.20.5",
    "typescript": "5.9.2"
  }
}
